#!/usr/bin/env bash
downloads="$HOME/Downloads"
vid="{mp4,mkv,gif,webv}"
img="{jpg,jpeg,png,webp,}"

mkdir -p $downloads/{archive,torrent,exe,deb}
mkdir -p /mnt/data/vm/iso

iso(){
  mv $downloads/*.iso /mnt/data/vm/iso
  }

torrent(){
  mv $downloads/*.torrent $downloads/torrent
  }

zip(){
  mv $downloads/*.{zip,tar.*,zstd,rar,7z,vdf,ar} mv $downloads/archive
  }

exe(){
  mv $downloads/*.{exe,msi} $downloads/exe
  }

video(){
  mv $downloads/*.$vid $HOME/Videos/
  }

images(){
  mv $downloads/*.$img $HOME/Pictures
  }

deb(){
  mv $downloads/*.deb $downloads/deb
  }

if [ -f $1 ] ; then
    case $1 in
      $downloads/*.iso) \
        iso $1  ;;
      $downloads/*.torrent) \
        torrent $1  ;;
      $downloads/*.{exe,msi}) \
        exe $1  ;;
      $downloads/*.$vid) \
        video $1  ;;
      $downloads/*.$img) \
        images $1 ;;
      $downloads/*.deb) \
        deb $1  ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
