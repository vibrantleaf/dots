## rofi
# drun
super + shift + Return
    rofi -show drun -show-icons
# run
alt + shift + Return
    rofi -show run

# screenshot
Print
  flameshot gui

# lockscreen
super + Pause
    betterlockscreen --lock dim

## Termianl
# term
super + Return
    st -e tmux

# nnn
super + e
   st --class "nnn" -e nnn -Rd

# newsboat
super + n
   st --class "newsboat" -e newsboat

# htop
super + p
    st --class "htop" -e htop

# pulse mixer
super + m
    st --class "pulsemixer" -e pulsemixer

# discord
super + d
    discord || Discord || $HOME/.bin/discord || $HOME/Applications/Discord/Discord

# lutris
super + {_,control,alt,shift} + s
    /bin/usr/sh -C {steam.lutris,itch,minigalaxy}

# librewolf
super + w
    chromium

# librewolf private window
super + shift + w
    chromium --temp-profile

# reload sxhkd:
super + alt + r
	pkill -USR1 -x sxhkd

# tray $HOME/.bin/tray
super + t
    tray

super + shift + {t,b}
    info2 && tray

super + b
    info2

### media keys

# Raises volume
XF86AudioRaiseVolume
   pulsemixer --change-volume +5

# Lowers volume
XF86AudioLowerVolume
    pulsemixer --change-volume -5

# PLAY
XF86AudioPlay
    playerctl play-pause || mpc toggle

# Next
XF86AudioNext
    playerctl next || mpc next

# previous
XF86AudioPrev
    playerctl || mpc prev

# Stop
XF86AudioStop
    playerctl stop || mpc stop

# Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

# Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10

#Toggle fullscreen of window
super + shift + f
	bspc node -t '~fullscreen'

# set the window state
super + f
    bspc node -t '~{floating,tiled}'

# kill
super + shift + c
	bspc node -c

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# change workspace
super + tab
	bspc node -t

# Move focus to other monitor
super + BackSpace
		bspc monitor -f next

# Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

#Logout
super + shift + q
	bspc quit

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Flip layout vertically/horizontally
super + shift + a
	bspc node @/ --flip {vertical,horizontal}

# Move focused window to other monitor
super + shift + comma
	bspc node -m prev --follow

# Move focused window to other monitor
super + shift + period
		bspc node -m next --follow

# Focus/swap windows by direction
super + ctrl {h,j,k,l}
	bspc node --{focus} {west,south,north,east}

# Contract tiled space
super + ctrl + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
	bspc node --focus @{parent,brother,first,second}

# Preselect the splitting area for next window on leaf/parent
super + ctrl + {u,i,o,p}
	bspc node --presel-dir \~{west,south,north,east}

# Define splitting ratio for next window on leaf/parent
super + ctrl + {_,shift +}{1-9}
	bspc node {_,@/} --presel-ratio 0.{1-9}

# Focus selected desktop
alt + shift + Tab
	bspc desktop -f '^{1-9,10}'

# Rotate desktop layout
alt + shift + space
	bspc node @/ --rotate {90,-90}
alt + shift + space
	bspc node @/ --rotate {180,-180}


#Expand tiled space
control + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Move window to selected desktop FOR QWERTY KEYBOARDS
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

