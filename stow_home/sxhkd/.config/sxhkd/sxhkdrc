## rofi
# drun
super + shift + Return
    rofi -show drun -show-icons

# emoji
super + space
    rofi -show emoji -modi emoji

# run
alt + shift + Return
    rofi -show run

# screenshot
Print
  flameshot gui

# lockscreen
super + Pause
    betterlockscreen --lock dim

## Termianl
# term
super + Return
    alacritty -e tmux

# nnn
super + e
   alacritty --class "nnn" -e nnn -Rd

# newsboat
super + n
   alacritty --class "newsboat" -e newsboat

# htop
super + p
    alacritty --class "htop" -e htop


# pulse mixer
super + m
    alacritty --class "pulsemixer" -e pulsemixer

# discord
super + d
    discord || Discord || $HOME/.bin/discord
### game launchers

# steam
super + s
    steam

# gog (minigalaxy)
super + shift + s
    minigalaxy

# lutris
super + control + s
    lutris

# itch.io
super + alt +  s
    itch

### web
# qutebrowser
super + w
    qutebrowser

# librewolf
super + shift + w
    librewolf || firefox

# librewolf private window
alt + shift + w
    librewolf --private-window || firefox --private window

### misc

# reload sxhkd:
super + alt + r
	pkill -USR1 -x sxhkd


# system tray (~/.bin/tray)
super + t
    tray

super + shift + t
    info2 && tray

super + shift + b
    info2 && tray

# bar repacement (~/.bin/info:~/.bin/info2)
super + b
    info2

### media keys

# Raises volume
XF86AudioRaiseVolume
   pulsemixer --change-volume +5

# Lowers volume
XF86AudioLowerVolume
    pulsemixer --change-volume -5

# PLAY
XF86AudioPlay
    mpc toggle
    #playerctl play-pause

# Next
XF86AudioNext
    mpc next
    #playerctl next

# previous
XF86AudioPrev
    mpc prev
    #playerctl previous

# Stop
XF86AudioStop
    mpc stop
    #playerctl stop

# Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

# Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10


### fulscreen / floating / tiled

#Toggle fullscreen of window
super + shift + f
	bspc node -t '~fullscreen'


# set the window state
super + f
    bspc node -t '~{floating,tiled}'

# kill
super + shift + c
	bspc node -c

# change the window state

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# change workspace
super + tab
	bspc node -t

# Move focus to other monitor
super + BackSpace
		bspc monitor -f next

# Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

#Logout
super + shift + q
	bspc quit

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Flip layout vertically/horizontally
super + shift + a
	bspc node @/ --flip {vertical,horizontal}

# Move focused window to other monitor
super + shift + Left
	bspc node -m next --follow

# Move focused window to other monitor
super + shift + Right
		bspc node -m next --follow

# Move focused window to other monitor
super + shift + Up
	bspc node -m next --follow

# Move focused window to other monitor
super + shift + Down
		bspc node -m next --follow

# Focus/swap windows by direction
super + ctrl + {Left,Down,Up,Right}
	bspc node --{focus} {west,south,north,east}

# Contract tiled space
super + ctrl + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
	bspc node --focus @{parent,brother,first,second}

# Preselect the splitting area for next window on leaf/parent
super + ctrl + {u,i,o,p}
	bspc node --presel-dir \~{west,south,north,east}

# Define splitting ratio for next window on leaf/parent
super + ctrl + {_,shift +}{1-9}
	bspc node {_,@/} --presel-ratio 0.{1-9}

# Focus selected desktop
alt + shift + Tab
	bspc desktop -f '^{1-9,10}'

# Rotate desktop layout
alt + shift + space
	bspc node @/ --rotate {90,-90}

## flip desktop layout
alt + control + space
	bspc node @/ --rotate {180,-180}

#Expand tiled space
alt + shift + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Move window to selected desktop FOR QWERTY KEYBOARDS
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

