export PATH="$HOME/.bin:$HOME/.local/bin:/usr/local/bin:/usr/lib/ccache/bin/:$PATH"
export EDITOR="codium"
export TERMINAL="st"
export TERMCMD="st"
export BROWSER="qutebrowser"
export READER="foliate"
export MANPAGER="nvim -c 'set ft=man' -"
export XDG_DESKTOP_DIR="$HOME/Desktop"
export XDG_DOCUMENTS_DIR="$HOME/Documents"
export XDG_DOWNLOAD_DIR="$HOME/Downloads"
export XDG_MUSIC_DIR="$HOME/Music"
export XDG_PICTURES_DIR="$HOME/Pictures"
export XDG_VIDEOS_DIR="$HOME/Videos"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export RUST_BACKTRACE=full
export QUTE_DOWNLOAD_DIR="$HOME/Downloads"
export CALIBRE_USE_DARK_PALETTE=1
export NNN_BMS='h:~;p:~/Pictures;d:~/Downloads/;b:bookmarks'
export NNN_USE_EDITOR=1
export NNN_OPENER=nnnopen
export NNN_COLORS='1267'
export NNN_TMPFILE="$HOME/.config/nnn.last"

export CCACHE_DIR="/var/cache/ccache"

HIST_STAMPS="yyyy/mm/dd"
HISTFILE=~/.cache/sh/history
HISTSIZE=10000
SAVEHIST=10000

LS_COLORS='di=1;35:fi=0:ln=31:pi=5:so=5:bd=5:cd=5:or=31:mi=0:ex=35:*.rpm=90:*.png=35:*.gif=36:*.jpg=35:*.c=92:*.jar=33:*.py=93:*.h=90:*.txt=94:*.doc=104:*.docx=104:*.odt=104:*.csv=102:*.xlsx=102:*.xlsm=102:*.rb=31:*.cpp=92:*.sh=92:*.html=96:*.zip=4;33:*.tar.gz=4;33:*.mp4=105:*.mp3=106'
